+
+        except subprocess.TimeoutExpired:
+            return {
+                "type": "performance_tests",
+                "duration": time.time() - start_time,
+                "return_code": -1,
+                "error": "Performance tests timed out"
+            }
+
+    def run_security_tests(self) -> Dict[str, Any]:
